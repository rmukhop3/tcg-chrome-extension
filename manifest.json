{
  "manifest_version": 3,
  "name": "Triangulator Course Matcher",
  "version": "1.0.0",
  "description": "Find equivalent courses across institutions",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*/*",
    "file://*/*",
    "https://api-main-poc.aiml.asu.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file://*/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "triangulator_logo.png",
        "backgrounddotpattern.jpg"
      ],
      "matches": [
        "*://*/*",
        "file://*/*"
      ]
    }
  ]
}